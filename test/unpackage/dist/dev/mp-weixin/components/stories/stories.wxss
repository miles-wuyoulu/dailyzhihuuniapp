.stories {
  padding-left: 20rpx;
  padding-right: 40rpx;
  width: 100%;
  height: 260rpx;
  display: flex;
  align-items: center;
}
.stories .text {
  flex: 70%;
  height: 100%;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.stories .text .tit {
  font-size: 37rpx;
  font-weight: 700;
}
.stories .text .auth {
  font-size: 27rpx;
  font-weight: 400;
  color: gray;
}
.stories image {
  flex: 30%;
  width: 100%;
}

